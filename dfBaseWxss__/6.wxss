.data-content {
    margin-top: 1rpx;
    background-color: #ffffff;
    display: flex;
    width: 100%;
    justify-content: space-between;
    padding: 20rpx;
    box-sizing: border-box;
    
}
.data-contentph {
    margin-top: 1rpx;
    background-color: #ffffff;
    display: flex;
    width: 100%;
    justify-content: space-between;
    padding: 20rpx;
    box-sizing: border-box;
    
}
.data-content>view {
    flex: 1;
    color: #366AB3;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

.data-content>view .data-content-num-topline {
    padding-top: 20rpx;
    border-top: 1px solid #366AB3;
}

.data-content>view .data-content-num {
    display: flex;
    font-size: 36rpx;
    font-weight: bold;
    align-items: center;
    width: 80%;
    justify-content: center;
}
 
.data-content>view .data-content-num .data-content-num-unit {
    font-size: 20rpx;
}

.data-content>view .data-content-desc {
    font-size: 20rpx;
    color: #8A8D91;
}

.data-content .shuxian {
    position: relative;
}

.data-content .shuxian:after {
    content: '';
    background-color: rgba(51,51,51,.05);
    width: 1px;
    height: 100%;
    position: absolute;
    right: 0;
    bottom: 0;
}
