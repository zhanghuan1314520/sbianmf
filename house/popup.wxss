/* 弹窗内容区域开始 */
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 710rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 10rpx;
  margin: 0 20rpx;
}

.modal-title {
  padding-top: 30rpx;
  font-size: 30rpx;
  color: #030303;
  text-align: center;
  font-weight: 600;
}

.modal-content {
  padding: 30rpx 32rpx;
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  justify-content: space-around;
}

.modal-content_tip {
  font-size: 24rpx;
  width: 200rpx;
}

.modal-content_btn {
  width: 200rpx;
  background-color: #0C65F0;
  border-radius: 30rpx;
  color: #fff;
  text-align: center;
  font-size: 24rpx;
}
/* 弹窗内容区域结束 */
/* 蒙层区域开始 */
.new_mc {
  width: 690rpx;
  background-color: #fff;
  text-align: center;
  height: 240rpx;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  position: absolute;
  z-index: 10;
  opacity: 0.9;
}

.new_mc1 {
  width: 690rpx;
  background-color: #fff;
  text-align: center;
  height: 255rpx;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  position: absolute;
  z-index: 10;
  opacity: 0.9;
}

.new_mc_tip {
  font-size: 26rpx;
  color: #000;
  padding-top: 20rpx;
  font-weight: 600;
}

.new_mc_ts {
  font-size: 24rpx;
  margin-top: 20rpx;
}

.new_mc_btn {
  width: 300rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  background-color: #0C65F0;
  color: #fff;
  height: 70rpx;
  line-height: 70rpx;
  margin: 40rpx auto 0 auto;
}
/* 蒙层区域开始结束 */


/* 进度条开始 */
.new_city_list_r_progress {
  width: 80rpx;
  margin: 10rpx 5rpx;

  text-align: center;
  font-size: 20rpx;
}
.progress-content {
  position: relative;
}

.progress {
  width: 80rpx;
  height: 15rpx;
  line-height: 15rpx;
  background: #EEEDF2;
  border-radius: 13rpx;
  box-sizing: border-box;
}

.progress-active {
  background: #FEAE38;
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 13rpx 0rpx 0rpx 13rpx;
}

.progress-active-full {
  border-radius: 13rpx;
}
/* 进度条结束 */