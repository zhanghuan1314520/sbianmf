page {
  background-color: #f8f8f8;
}

.switch-tab {
  padding-top: 20rpx;
  box-sizing: border-box;
  height: 280rpx;
}

.flex-center {
  justify-content: center;
}

.flex-between,.flex-center {
  display: flex;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

.flex-around,.flex-start {
  display: flex;
}

.flex-start {
  justify-content: flex-start;
  align-items: center;
}

.txt-right {
  text-align: right;
}

.switch-item {
  width: 25%;
  position: relative;
  text-align: center;
  font-size: 32rpx;
  color: #8A8D91;
  font-family: PingFang-SC-Regular,PingFang-SC;
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 26rpx;
}

.switch-item.active {
  font-weight: 600;
  color: #366AB3;
  font-size: 32rpx;
}

.active:after {
  content: "";
  width: 0;
  height: 0;
  border: 16rpx solid transparent;
  border-bottom-color: #fff;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -40rpx;
}

.switch-content {
  width: 690rpx;
  background: #fff;
  box-shadow: 0 2rpx 28rpx 0 rgba(90,84,79,.27);
  border-radius: 10rpx;
  margin: -170rpx auto 0;
  padding: 30rpx 30rpx 71rpx;
  box-sizing: border-box;
  color: #333;
  font-size: 30rpx;
}

.form-group {
  height: 110rpx;
  border-bottom: 1px solid #ededed;
  font-size: 26rpx;
}

picker {
  height: 110rpx;
  line-height: 110rpx;
}

.label {
  color: #333;
  font-size: 28rpx;
  /* font-weight: 600; */
  line-height: 42rpx;
  white-space: normal;
}

.form-group>view:first-child.info-title {
  width: 210rpx;
  flex-shrink: 0;
}

.info-main {
  flex: 1;
  margin-left: 120rpx;
}

.info-main-s {
  flex: 1;
  margin-left: 30rpx;
}

.arrow-img {
  width: 11rpx;
  height: 20rpx;
}

.light-word {
  color: #999;
}

input {
  width: 100%;
}

.form-group>view:first-child {
  width: 120rpx;
}

.footer {
  margin-top: 40rpx;
  padding-bottom: 53rpx;
}

.submit {
  width: 690rpx;
  height: 90rpx;
  /* background: linear-gradient(270deg,#fe5e10,#ff831c); */
  background-color:  #366AB3;
  border-radius: 10rpx;
  color: #fff;
  font-size: 34rpx;
  margin: 0 auto;
}

.footer-operate-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 23rpx;
  color: #fe5f10;
  margin-bottom: 53rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.help {
  padding-left: 50rpx;
  color: #366AB3;
}

.LPR-toast {
  height: 28rpx;
  width: 28rpx;
  line-height: 28rpx;
  color: #fff;
  text-align: center;
  font-size: 10px;
  border-radius: 30rpx;
  background: #ccc;
  margin-left: 12rpx;
}

.tip-info {
  font-size: 24rpx;
  color: #92949d;
  line-height: 33rpx;
  font-weight: 400;
}

.reset-btn-box,.tip-info {
  position: relative;
  white-space: nowrap;
}

.reset-btn-box {
  width: 112rpx;
  height: 40rpx;
  font-size: 28rpx;
  color: #366AB3;
  line-height: 40rpx;
}

.reset {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
}

.placeholder {
  color: #ccc;
}

/* 弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.6;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
 
