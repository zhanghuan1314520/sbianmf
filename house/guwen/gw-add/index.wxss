page {
    background: rgba(241,242,247,1);
    border-top: 1px solid rgba(228,231,240,1);
}

.container {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}
.headt{
    font-size: 30rpx;
    color:#d41f19;
    padding: 20rpx;
}
.wrapper {
    display: block;
}

.wrapper .title {
    padding: 40rpx 40rpx 20rpx;
    font-size: 28rpx;
    color: rgba(85,85,255,1);
}

.wrapper .box {
    background: #fff;
    display: flex;
    flex-direction: column;
}

.wrapper .box .item {
    display: flex;
    align-items: center;
    margin-left: 40rpx;
    border-bottom: 1px solid rgba(237,237,237,1);
    font-size: 28rpx;
    color: rgba(59,58,74,1);
}

.wrapper .box .item:last-child {
    border-bottom: 0;
}

.wrapper .box .item .desc {
    flex: 0 0 118rpx;
    
}

.wrapper .box .item input{
    flex: 1;
    padding: 28rpx 0;
}

.placeholder {
    font-size: 28rpx;
    color: rgba(187,188,205,1);
}

.wrapper .code {
    padding: 40rpx 42rpx;
    background: #fff;
}

.wrapper .upload {
    display: inline-block;
    width: 180rpx;
    height: 180rpx;
    margin-right: 40rpx;
    border-radius: 4rpx;
    border: 1px dashed rgba(187,188,205,1);
    position: relative;
}

.upload image {
    display: block;
    width: 100%;
    height: 100%;
}

.upload .add {
    display: block;
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 25rpx;
}

.upload .text {
    font-size: 24rpx;
    color: rgba(156,157,170,1);
    position: absolute;
    left: 40%;
    transform: translateX(-30%);
    bottom: 20rpx;
}

.tips {
    padding: 40rpx 40rpx 52rpx;
}

.tips .content {
    display: flex;
    font-size: 24rpx;
    color: rgba(59,58,74,1);
}

.tips image {
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    margin-top: 4rpx;
}

.tips .text {
    width: 626rpx;
    margin-left: 12rpx;
    text-align: justify;
}


.weixin {
    display: flex;
    flex-direction: column; 
    height: 100%;
}

.weixin .title {
    font-size: 32rpx;
    font-weight: bold;
    color: rgba(29,30,33,1);
    padding: 20rpx 40rpx;
}

.weixin .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 60rpx 0 50rpx 0;
}

.weixin .content .gzh {
    color: #828393;
    font-size: 32rpx;
    margin-bottom: 40rpx;
    font-weight: 500;
}

.weixin .content .gzh-img {
    width: 400rpx;
    height: 400rpx;
    box-shadow: 0 12rpx 28rpx 0 rgba(0,0,0,0.15);
}

.weixin .content .gzh-img image {
    width: 100%;
    height: 100%;
    display: block;
}

.weixin .content .gzh-tips {
    font-size: 28rpx;
    color: #828393;
    margin-top: 50rpx;
}

 
 

 

.submit {
    display: block;
    width: 640rpx;
    height: 92rpx;
    background: #366AB3;
    border-radius: 45rpx;
    margin: 0 auto 60rpx;
    text-align: center;
    line-height: 92rpx;
    font-size: 32rpx;
    color: rgba(255,255,255,1);
}


.wrapper .box .item radio{
    width: 38rpx;
    padding: 28rpx 0;
    padding-left: 10rpx;
}
 
.wrapper .box .item radio .wx-radio-input{
    border-radius: 50%; 
    width: 28rpx;
    height: 28rpx;
    

}
 
/* 选中后的样式 （可根据设计稿需求自己修改） */
.wrapper .box .item radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 44rpx; 
    height: 44rpx; 
    line-height: 44rpx;
    text-align: center;
    font-size: 26rpx; /* 对勾大小 26rpx */
    color:#fff; /* 对勾颜色 */
    background: #366AB3;
    border-color: #366AB3; 

}




.lp__qrcode {
    position: relative;
    background: #fff;
    height: 133rpx;
    margin-top: 12rpx;
    padding: 17rpx 30rpx 6rpx 36rpx;
}

.lp__qrcode-icon {
    width: 164rpx;
    height: 133rpx;
    float: left;
}

.lp__qrcode-content {
    margin: 5rpx 0 0 17rpx;
    float: left;
}

.lp__qrcode-title {
    color: #062941;
    font-size: 36rpx;
    font-weight: bold;
    line-height: 50rpx;
}

.lp__qrcode-text {
    font-size: 26rpx;
    color: #8a969e;
    float: left;
    margin-top: 5rpx;
}

.lp__qrcode-text>text {
    display: inline-block;
    line-height: 37rpx;
}

.lp__qrcode-btn {
    background: #2c83ff;
    color: white;
    padding: 3rpx 11rpx;
    font-size: 22rpx;
    text-align: center;
    display: inline-block;
    border-radius: 2rpx;
    line-height: 30rpx;
    margin-left: 6rpx;
}

.lp__qrcode-img {
    width: 123rpx;
    height: 123rpx;
    float: right;
}