@import "../../dfBaseWxss__/3.wxss";

@import "../../dfBaseWxss__/7.wxss";

button::after {
    border: none;
}

.container {
    width: 100%;
    height: 100vh;
    background-color: #EAE9E9;
}

.container .list-content {
    padding: 20rpx;
    background-color: #ffffff;
    width: 100%;

    box-sizing: border-box;
}

.container .list-content .list-block {
    display: flex;
    justify-content: flex-start;
    font-size: 24rpx;
    color: #8A8D91;
    border-bottom: solid 1px #d6dae1;
    line-height: 80rpx;
    height: 80rpx;
    vertical-align: middle;
}

.container .list-content .block-head {
    font-size: 28rpx;
    height: 80rpx;
    font-weight: bold;
    color: #366AB3;
    background-color: #E7F4FA;
    display: flex;
    align-items: center;
    justify-content: center;
}
.container .list-content .top-bar {
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
    background-color: #366AB3;
    color: #ffffff;
    padding: 20rpx;
    height: 30rpx;
}

.container .list-content .load-more {
    font-size: 24rpx;
    text-align: center;
    color: #366AB3;
    padding: 20rpx;
}

.btns {
    height: 100%;
}

.btn {
    border-radius: 0;
    height: 100%;
    line-height: 90rpx;
    font-size: 28rpx;
    color: #fff;
    background-color: #366AB3;
    margin: 0;
    margin-left: 2rpx;
    width: 160rpx;
    border: 0;
}
.btn-warning{
  background-color: #d10e0e;
}
.fui-footer .tool {
    padding-right: 0;
}