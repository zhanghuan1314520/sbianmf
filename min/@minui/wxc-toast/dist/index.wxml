<view class="toast" style="z-index: {{zIndex}};" wx:if="{{isShow}}">
    <view class="toast__box">
        <view class="toast__icon" wx:if="{{icon||src}}">
            <wxc-icon _pid="{{_pid}}" color="{{iconColor||'#fff'}}" size="68" type="{{icon}}" wx:if="{{icon&&!src}}"></wxc-icon>
            <image class="toast__icon--image" mode="widthFix" src="{{src}}" wx:if="{{src}}"></image>
        </view>
        <text class="toast__title">
            <slot wx:if="{{!text}}"></slot>{{text?text:''}}
        </text>
    </view>
</view>
