.maifang .card {
    background: #FFF;
    padding: 0 48rpx;
}

.maifang .card .row {
    display: flex;
    width: 100%;
    height: 120rpx;
    font-size: 32rpx;
    line-height: 120rpx;
    box-sizing: border-box;
    border-bottom: 2rpx solid #F8F8F9;
}
.maifang .row .title1 {
    flex: 1;
    color: #222222;
    font-weight: bold;
}
.maifang .row .title {
    flex: 2;
    color: #222222;
    font-weight: bold;
}

.maifang .row .row_input {
    flex: 2;
    display: inline-block;
    height: 120rpx;
}
.maifang .row .row_input1 {
    flex: 2;
    display: inline-block;
    height: 120rpx;
    width: 70%;
}
.maifang .row .row_input2 {
    flex: 2;
    display: inline-block;
    height: 120rpx;
    width: 70%;
}
.maifang .row .row_input3 {
    flex: 2;
    display: inline-block;
    height: 120rpx;
    width: 70%;
}
.maifang .row .row_read {
    text-align: left;
    display: inline-block;
    height: 120rpx;
    display: flex;
}

