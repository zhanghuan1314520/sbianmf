@charset "UTF-8";

button::after {
    border: none;
}

.btn-large {
    font-size: 36rpx;
    font-family: PingFangSC-Semibold;
    font-weight: bold;
    border-radius: 10rpx;
    line-height: 96rpx;
    height: 96rpx;
    text-align: center;
}

.btn-small {
    font-size: 24rpx;
    font-family: PingFangSC-Semibold;
    font-weight: bold;
    border-radius: 4rpx;
    line-height: 56rpx;
    height: 56rpx;
    min-width: 128rpx;
    padding: 0 16rpx;
    text-align: center;
}

.btn-blue {
    background: #3072F6;
    color: #FFFFFF;
}

.btn-green {
    background: #3BC48B;
    color: #FFFFFF;
}

.btn-grey {
    background: #F8F8F8;
    color: #222222;
}

.btn-blue-button-hover {
    background-color: #2B66DC;
}

.btn-green-button-hover {
    background-color: #34B07C;
}

.btn-grey-button-hover {
    background-color: #EAF0FE;
}

.btn-blue-button-disabled {
    background-color: #ACC6FB;
}

.btn-green-button-disabled {
    background-color: #B0E7D0;
}

.btn-grey-button-disabled {
    background-color: #EAF0FE;
}

.btn-blue-button-choose {
    background-color: #FFFFFF;
    color: #3072F6;
    border: 3rpx solid #3072F6;
}

.btn-green-button-choose {
    background-color: #FFFFFF;
    color: #3BC48B;
    border: 3rpx solid #3BC48B;
}

.reddot {
    font-size: 20rpx;
    background: #FA5741;
    display: inline-block;
    color: #FFFFFF;
    min-width: 18rpx;
    font-family: PingFangSC-Semibold;
    padding: 8rpx 10rpx;
    border: 2rpx solid #FFFFFF;
    border-radius: 50rpx;
    box-sizing: border-box;
    vertical-align: middle;
    text-align: center;
    line-height: 14rpx;
}

.hr {
    height: 2rpx;
    border: none;
    background: #F0F0F0;
}

page {
    color: #222222;
    font-size: 32rpx;
    font-family: 'PingFang';
}

.big-number {
    font-size: 76rpx;
