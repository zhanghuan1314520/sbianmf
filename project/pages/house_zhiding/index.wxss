}

 


.maifang .row .row_input .placeholder-style {
    color: #CCCCCC;
}

.maifang .row .row_right {
    flex: 1;
    text-align: right;
}

.maifang .row .row_right button{
    text-align: center;
    text-decoration: none;
    font-size: 34rpx;
    color: #fff;
    background-color: #3072f6;
    display: inline;

    
}
.maifang .row .row_right .getPhoneNumber{
    padding:5rpx;
}
.maifang .maifang_bottom {
    position: absolute;
    bottom: 32rpx;
    width: 100%;
    padding: 0 48rpx;
    box-sizing: border-box;
    text-align: center;

}

.maifang .maifang_bottom.iphonex {
    bottom: 100rpx;
}

.maifang .maifang_bottom .btn {
    height: 96rpx;
    background: #3072f6;
    line-height: 96rpx;
    color: #FFF;
    text-align: center;
    border-radius: 10rpx;
    font-size: 34rpx;
    font-weight: bold;
    width: 400rpx;
    border: none;

}

.maifang .maifang_bottom .btn:active {
    background: #2B66DC;
}

.maifang .icon_arrow {
    display: inline-block;
