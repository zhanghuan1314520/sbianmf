/* project/pages/share/share.wxss */
.share-button {
  z-index: 999998;
  position: fixed;
  background: #8b8686;
  height: 100rpx;
  width: 120rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  bottom: 190rpx;
  right: 30rpx;
  font-size: 28rpx;
  opacity: 0.6;
  color: #666;
}

.sc {
  width: 40rpx;
  height: 40rpx;
  margin: 5px 40rpx;
}
.share-txt{
  color: #fff;
}
.box {
  display: flex;
  position: fixed;
  z-index: 999999;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 120rpx;
  background-color: #fff;
}

.box_nav {
  width: 100%;
  display: flex;
  padding: 10rpx;
  border-top: 1px solid #f7f4f4;
}

.box_nav1 {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.box_nav1_img {
  width: 100%;
  height: 100%;
}

.box_nav2 {
  width: 150rpx;
  height: 100rpx;
  font-size: 28rpx;
  text-align: left;
  padding-left: 15rpx;
}

.box_nav2_name {
  height: 50rpx;
  line-height: 50rpx;
}

.box_nav3 {
  width: 280rpx;
  height: 100rpx;
  display: flex;
}

.box_nav3_item {
  width: 104rpx;
  text-align: center;
}

.box_nav3_img {
  width: 50rpx;
  height: 50rpx;
  padding: 0 25rpx;
  line-height: 50rpx;
}

.box_nav3_name {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}

.box_nav4 {
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 30rpx;
  border-radius: 15rpx;
  background-color: #366ab3;

}

.share-box {
  z-index: 999999;
  position: fixed;
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  width: 345rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  bottom: 70rpx;
  right: 205rpx;
  font-size: 28rpx;
  background-color: #366AB3;
}